apiVersion: v1
kind: Secret
metadata:
  name: api-secrets
  labels:
    app: heart-disease-api
type: Opaque
data:
  # Base64 encoded values
  # Example: echo -n "your-secret" | base64
  AZURE_INSTRUMENTATION_KEY: "YOUR_BASE64_ENCODED_KEY_HERE"
  AZURE_CONNECTION_STRING: "YOUR_BASE64_ENCODED_CONNECTION_STRING_HERE"
stringData:
  # Plain text values (will be automatically base64 encoded)
  # API_KEY: "your-api-key-here"

